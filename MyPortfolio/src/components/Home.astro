           </div>
      </article>
      <img src="/jotaro ora ora.gif" alt="ora" />
   </section>

  <script>
    const typed = new Typed(document.getElementById("typed-text"), {
      strings: ["Developer","Future Ingeneer", "Gamer","Anime fan"],
      typeSpeed: 100,
      backSpeed:75,
      startDelay:0,
      smartBackspace:true,
      backDelay:1500, 
      loop: true,
    });
  </script>



