---
import Navbar from '../components/Navbar.astro';
import AboutMe from '../components/AboutMe.astro';
import Home from '../components/Home.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Toby-Portfolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Vollkorn:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
    <script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
  </head>
  <body class="min-h-screen bg-cover bg-fixed bg-gradient-to-b from-black to-purple-800">
    <Navbar />
    <Home />
    <AboutMe />

  </body>
</html>
<style is:global>
  html, body {
    font-family: "Vollkorn", "serif";
    min-height: 100vh;
  }
</style>
